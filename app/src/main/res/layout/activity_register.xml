<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alert"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/half_icon1">

            <TextView
                android:id="@+id/ereporter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLASU"
                android:textColor="@color/lightPurple"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="12dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/half_icon2">

            <TextView
                android:id="@+id/ereporter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aid"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"/>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_signup"
        android:text="Signup"
        android:textSize="20sp"
        android:textColor="@color/lightPurple"
        android:textStyle="bold"
        android:layout_below="@id/linear1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ed_name"
        android:hint="Name"
        android:inputType="text"
        android:textColorHint="@color/colorPrimaryDark"
        android:imeOptions="actionNext"
        android:textSize="14sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ed_btn_white"
        android:paddingLeft="5dp"
        android:layout_below="@id/tv_signup"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ed_name"
        android:id="@+id/linear3"
        android:weightSum="10">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Blood Group"
            android:textColorHint="@color/colorPrimaryDark"
            android:padding="2dp"
            android:id="@+id/spinner_bloodgroup"
            android:background="@drawable/ed_btn_white"
            android:layout_weight="5"
            android:layout_marginRight="3dp">

        </Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Blood Group"
            android:textColorHint="@color/colorPrimaryDark"
            android:padding="2dp"
            android:id="@+id/spinner_authtype"
            android:background="@drawable/ed_btn_white"
            android:layout_weight="5"
            android:layout_marginLeft="2dp">

        </Spinner>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ed_email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorPrimaryDark"
        android:imeOptions="actionNext"
        android:textSize="14sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ed_btn_white"
        android:paddingLeft="5dp"
        android:layout_below="@id/linear3"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ed_password"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimaryDark"
        android:imeOptions="actionDone"
        android:textSize="14sp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ed_btn_white"
        android:paddingLeft="5dp"
        android:layout_below="@id/ed_email"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:orientation="horizontal"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ed_password">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox"
            android:backgroundTint="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="Keep me signed in?"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/btn_register"
        android:text="Signup"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@id/linear2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/linear4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_signin"
            android:text="Have an account?"
            android:textColor="@color/lightPurple"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_click"
            android:text="Signin"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/lightPurple"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_below="@id/linear4"/>

</RelativeLayout>
</ScrollView>