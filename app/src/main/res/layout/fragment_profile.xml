<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                tools:text="Eze Chrisantus Sylvester"
                android:textColor="@color/lightPurple"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/star"
                android:src="@android:drawable/btn_star_big_off"
                android:tint="@color/lightPurple"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:id="@+id/email_ll">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_tag_tag"
                    android:text="Email"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    tools:text="echrisantus@gmail.com"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:id="@+id/mat_ll">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matno_tag"
                    android:text="Mat No"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matno"
                    tools:text="20131846173"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:id="@+id/phone_ll">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone_tag"
                    android:text="Phone No"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone"
                    tools:text="08138203079"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:id="@+id/gender_ll">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender_tag"
                    android:text="Gender"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender"
                    tools:text="Male"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:id="@+id/level_ll">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level_tag"
                    android:text="Level"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level"
                    tools:text="300"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:id="@+id/dept_ll">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dept_tag"
                    android:text="Department"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dept"
                    tools:text="Electrical and Electronic Engineering"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:id="@+id/blood_group_ll">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blood_group_tag"
                    android:text="Blood Group"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blood_group"
                    tools:text="O+"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:id="@+id/guardian_ll">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="5.5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guardian_tag"
                    android:text="Guardian Phone No"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guardian"
                    tools:text="08036305143"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp">

            <ImageButton
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="20dp"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="@color/white"/>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"/>


</RelativeLayout>