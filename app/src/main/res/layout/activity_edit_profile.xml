<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    tools:context=".EditProfileActivity">


    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/name_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:text="Name"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ed_name"
            android:inputType="text"
            android:textColorHint="@color/colorPrimaryDark"
            android:imeOptions="actionNext"
            android:textSize="14sp"
            android:background="@drawable/ed_btn_accent"
            android:paddingLeft="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/mat_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:text="Mat No"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ed_mat_no"
            android:inputType="text"
            android:textColorHint="@color/colorPrimaryDark"
            android:imeOptions="actionNext"
            android:textSize="14sp"
            android:background="@drawable/ed_btn_accent"
            android:paddingLeft="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/phone_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text3"
            android:text="Phone No"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ed_phone"
            android:inputType="numberDecimal"
            android:textColorHint="@color/colorPrimaryDark"
            android:imeOptions="actionNext"
            android:textSize="14sp"
            android:background="@drawable/ed_btn_accent"
            android:paddingLeft="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/gender_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text4"
            android:text="Gender"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Gender"
            android:textColorHint="@color/colorPrimaryDark"
            android:padding="3dp"
            android:id="@+id/spinner_gender"
            android:background="@drawable/ed_btn_accent"
            android:layout_weight="5"
            android:layout_marginRight="3dp">

        </Spinner>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/level_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text5"
            android:text="Level"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ed_level"
            android:inputType="number"
            android:textColorHint="@color/colorPrimaryDark"
            android:imeOptions="actionNext"
            android:textSize="14sp"
            android:background="@drawable/ed_btn_accent"
            android:paddingLeft="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/dept_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text6"
            android:text="Department"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ed_dept"
            android:inputType="text"
            android:textColorHint="@color/colorPrimaryDark"
            android:imeOptions="actionDone"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:background="@drawable/ed_btn_accent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/blood_group_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text7"
            android:text="Blood Group"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Blood Group"
            android:textColorHint="@color/colorPrimaryDark"
            android:padding="3dp"
            android:id="@+id/spinner_bloodgroup"
            android:background="@drawable/ed_btn_accent"
            android:layout_weight="5"
            android:layout_marginRight="3dp">

        </Spinner>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/guardian_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text8"
            android:text="Guardian Phone No"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ed_guardian"
            android:inputType="numberDecimal"
            android:textColorHint="@color/colorPrimaryDark"
            android:imeOptions="actionDone"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:background="@drawable/ed_btn_accent"/>

    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/btn_save"
        android:text="Save"
        android:textColor="@color/lightPurple"
        android:background="@drawable/dialog_btn"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
</ScrollView>