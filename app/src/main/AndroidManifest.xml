<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eze.chrisantus.emergencyreporter">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Utils.EmergencyReporter"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeSlidesActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".SMSActivity"
            android:label="SMS" />
        <activity android:name=".TipsListActivity" />
        <activity android:name=".AddTipsActivity" />
        <activity
            android:name=".EditProfileActivity"
            android:label="Edit Profile" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />
        <activity
            android:name=".MessageActvity"
            android:label="Edit Default SMS" />
        <activity
            android:name=".AlertsListActivity"
            android:label="Alerts" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".AdminMainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".AdminProfileActivity"
            android:label="Profile" />
        <activity android:name=".UsersActivity"
            android:label="Users"/>
        <activity android:name=".UserProfileActivity"
            android:label="Profile"></activity>
    </application>

</manifest>